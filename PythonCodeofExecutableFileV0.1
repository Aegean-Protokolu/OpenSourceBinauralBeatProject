def generate_stereo_sine_wave(left_frequency, right_frequency, duration_ms, left_volume, right_volume):
    sample_rate = 44100  # CD quality
    t = np.linspace(0, duration_ms / 1000, int(sample_rate * (duration_ms / 1000)), endpoint=False)

    left_wave = left_volume * np.sin(2 * np.pi * left_frequency * t)
    right_wave = right_volume * np.sin(2 * np.pi * right_frequency * t)

    return left_wave, right_wave


def update_sine_wave():
